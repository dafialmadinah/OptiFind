{
  "info": {
    "name": "OptiFind API",
    "description": "API Collection for OptiFind - Lost & Found Application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"noTelepon\": \"081234567890\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register new user"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('authToken', response.token);",
                  "        console.log('Token saved to environment');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login and get JWT token. Token will be automatically saved to environment variable."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Barangs",
      "item": [
        {
          "name": "Get All Barangs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/barangs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "barangs"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop",
                  "disabled": true
                },
                {
                  "key": "tipe",
                  "value": "hilang",
                  "disabled": true
                },
                {
                  "key": "kategori",
                  "value": "1",
                  "disabled": true
                }
              ]
            },
            "description": "Get all barangs with optional filters"
          },
          "response": []
        },
        {
          "name": "Search Barangs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/barangs?q=laptop&tipe=hilang",
              "host": ["{{baseUrl}}"],
              "path": ["api", "barangs"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                },
                {
                  "key": "tipe",
                  "value": "hilang"
                }
              ]
            },
            "description": "Search barangs by query and filters"
          },
          "response": []
        },
        {
          "name": "Create Barang",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama\": \"Laptop Asus ROG\",\n  \"tipeId\": 1,\n  \"kategoriId\": 1,\n  \"statusId\": 1,\n  \"waktu\": \"2025-10-20T10:00:00Z\",\n  \"lokasi\": \"Gedung A Lantai 3\",\n  \"kontak\": \"081234567890\",\n  \"deskripsi\": \"Laptop gaming warna hitam, ada stiker di cover\",\n  \"foto\": \"https://example.com/foto.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/barangs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "barangs"]
            },
            "description": "Create new barang report (requires authentication)"
          },
          "response": []
        },
        {
          "name": "Update Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/barangs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "barangs", "1"]
            },
            "description": "Update barang status (requires authentication, owner or admin only)"
          },
          "response": []
        },
        {
          "name": "Selesaikan Laporan",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/barangs/1/selesaikan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "barangs", "1", "selesaikan"]
            },
            "description": "Mark report as completed (requires authentication, owner or admin only)"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "YOUR_TOKEN_HERE",
      "type": "string"
    }
  ]
}
